{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["dockerfile", "regex"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchPackageNames": ["ghcr.io/vanilla-os/desktop"],
      "pinDigests": true,
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^recipe\.yml$"],
      "matchStrings": [
        "base:\s*(?<depName>ghcr\.io/vanilla-os/desktop):(?<currentValue>[^@\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "docker": {
    "enabled": true,
    "pinDigests": true
  }
}
